                                    <!--enter surname-->
                                    <div class="row" style="margin-top:3%;">
                                        <div class="col-sm-12">
                                            <div class="form-group text-justify">
                                                <input type="text" class="form-control opinion_text" placeholder="enter surname" name="opinion_register_surname" id="opinion_register_surname" aria-labelledby="opinion_register_surname_help" />
                                                <small id="opinion_register_name_help" class="form-text text-muted">Add surname for account</small>
                                            </div>
                                        </div>
                                    </div>


                                    <!--enter email-->
                                    <div class="row" style="margin-top:3%;">
                                        <div class="col-sm-12">
                                            <div class="form-group text-justify">
                                                <input type="email" class="form-control opinion_text" placeholder="enter email address" name="opinion_register_email" id="opinion_register_email" aria-labelledby="opinion_register_email_help" />
