                                                <small id="opinion_register_phone_help" class="form-text text-muted">Add phone associated with the  account</small>
                                            </div>
                                        </div>
                                    </div>


                                    <!--enter password-->
                                    <div class="row" style="margin-top:3%;">
                                        <div class="col-sm-12">
                                            <div class="form-group text-justify" style="margin-top:3%;">
                                                <input type="password" class="form-control opinion_text" placeholder="enter password" name="opinion_register_password" id="opinion_register_password" aria-labelledby="opinion_register_password_help" />
                                                <small id="opinion_register_password_help" class="form-text text-muted">Add password associated with the account</small>


                                                <input type="password" class="form-control opinion_text" placeholder="re-enter password" name="opinion_register_repassword" id="opinion_register_repassword" aria-labelledby="opinion_register_repassword_help" />
                                                <small id="opinion_register_password_rehelp" class="form-text text-muted">Add password associated with the account</small>

                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="text-center" style="border:1px solid #d5d5d5; background-color:#fff; margin-top:5%; padding:1%;">
                                    <input type="submit" value="register, phakathi inside" class="btn btn-primary opinion_add_box_btn_r" />
                                    @*<input type="reset" value="cancel everything" class="btn btn-warning opinion_add_box_btn" id="register_cancel" />*@
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                @*<div class="modal-footer">
                        @Html.ActionLink("Home", "Home", "Index", new { @class = "btn btn-primary" })
                    </div>*@
            </div>
        </div>
    </div>


    <!--verify and login user-->
