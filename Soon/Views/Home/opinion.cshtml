                                    </div>

                                    <!--enter username-->
                                    <div class="row" style="margin-top:3%;">
                                        <div class="col-sm-12">
                                            <div class="form-group text-justify">
                                                <input type="text" class="form-control opinion_text" placeholder="enter username" name="opinion_register_username" id="opinion_register_username" aria-labelledby="opinion_register_username_help" />
                                                <small id="opinion_register_username_help" class="form-text text-muted">Add username for account</small>
                                            </div>
                                        </div>
                                    </div>

                                    <!--enter name-->
                                    <div class="row" style="margin-top:3%;">
                                        <div class="col-sm-12">
                                            <div class="form-group text-justify">
                                                <input type="text" class="form-control opinion_text" placeholder="enter first name" name="opinion_register_name" id="opinion_register_name" aria-labelledby="opinion_register_name_help" />
